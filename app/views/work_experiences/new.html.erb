<h1>Create work experience </h1>

<%= form_for([@user, @experience], url: {action: "create"}, method: :post)  do |f| %>
    <%= f.label "Company"%>
    <%= f.text_field :employer %><br>

    <%= f.label "Job title"%>
    <%= f.text_field :title %><br>
    
    <%= f.label "Location"%>
    <%= f.text_field :location %><br><br>

    <%= f.label "Start date"%>
    <%= f.text_field :start_date %><br>

    <%= f.label "End date"%>
    <%= f.text_field :end_date %><br><br>

    <%= f.label "Experience"%>
    <%= f.text_field :experience %><br>

    <%# consider if ranking should be updated here, or if it should only be updated on INDEX pg %>
    <%= f.label "Ranking"%>
    <%= f.number_field :ranking, min: 1 %><br>

    <%= f.submit "Create new experience"%>
<% end %>